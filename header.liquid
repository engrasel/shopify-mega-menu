

<!----new megamenu---->
   {{ 'style.css' | asset_url | stylesheet_tag }}    
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
<header class="header_area">
  <div class="main_header_area animated">
    <div class="container">
      <nav id="navigation1" class="navigation">
        <div class="nav-header">
          <a class="nav-brand" href="#">LOGO</a>
          <div class="nav-toggle"></div>
        </div>
        <div class="nav-search">
          <div class="nav-search-button"><i class="nav-search-icon"></i></div>
          <form>
            <div class="nav-search-inner">
              <input type="search" name="search" placeholder="Search..."/>
            </div>
          </form>
        </div>
        <div class="nav-menus-wrapper">
          <ul class="nav-menu align-to-right"> 
    {%- for link in linklists.main-menu.links -%}
      {% if  link.title != section.settings.mega_menu %}
      <li>
        <a target="_blank" href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %}>
          {{ link.title }}
        </a>

        {%- if link.links != blank -%}
          <ul class="nav-dropdown">
            {%- for child_link in link.links -%}
              <li>
                <a href="{{ child_link.url }}" {% if child_link.active %}aria-current="page"{% endif %}>
                  {{ child_link.title }}
                </a>

                {%- if child_link.links != blank -%}
                  <ul class="nav-dropdown">
                    {%- for grandchild_link in child_link.links -%}
                      <li>
                        <a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                          {{ grandchild_link.title }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}

              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}

      </li>

      {% elsif  link.title == section.settings.mega_menu %}
        
      <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
        
              <div class="megamenu-panel">
                <div class="megamenu-lists">

                {%- if link.links != blank -%}
                  {%- for child_link in link.links -%}
                  <ul class="megamenu-list list-col-4">
                    <li class="megamenu-list-title"><a href="{{ child_link.url }}">{{ child_link.title }}</a></li>
                    {%- if child_link.links != blank -%}
                      {%- for grandchild_link in child_link.links -%}
                         <li><a href="{{ grandchild_link.url }}" target="_blank">{{ grandchild_link.title }}</a></li>
                        {% endfor %}
                    {%- endif -%} 
                  </ul>
                    {% endfor %}
                  {%- endif -%} 
                </div>
              </div>
       </li>
      {% endif %}

      
    {%- endfor -%}
  
        
            
           
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>

{{ 'script.js' | asset_url | script_tag }}                   

   
 <!----new megamenu end---->    